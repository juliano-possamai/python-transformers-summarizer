{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Flask",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/app.py",
			"args": [
				"run",
				"--no-debugger",
				"--no-reload"
			],
			"jinja": true,
			"env": {
				"FLASK_APP": "app.py",
				"FLASK_ENV": "development"
			},
			"envFile": "${workspaceFolder}/.env",
			"justMyCode": true
		}
	]
}